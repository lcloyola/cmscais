= form_for @property do |f|
  - if @property.errors.any?
    #error_explanation
      %h2= "#{pluralize(@property.errors.count, "error")} prohibited this property from being saved:"
      %ul
        - @property.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :item
    = f.text_field :item
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :remarks
    = f.text_area :remarks
  .field
    = f.label :datatype
    = f.number_field :datatype
  .actions
    = f.submit 'Save'
