= form_for @document do |f|
  - if @document.errors.any?
    #error_explanation
      %h2= "#{pluralize(@document.errors.count, "error")} prohibited this document from being saved:"
      %ul
        - @document.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :unit
    = f.text_field :unit
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :remarks
    = f.text_area :remarks
  .field
    = f.label :file
    = f.text_field :file
  .actions
    = f.submit 'Save'
