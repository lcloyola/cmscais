= form_for @log do |f|
  - if @log.errors.any?
    #error_explanation
      %h2= "#{pluralize(@log.errors.count, "error")} prohibited this log from being saved:"
      %ul
        - @log.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :unit
    = f.text_field :unit
  .field
    = f.label :properties
    = f.text_field :properties
  .field
    = f.label :value
    = f.text_area :value
  .actions
    = f.submit 'Save'
