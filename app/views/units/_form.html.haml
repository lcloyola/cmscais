= form_for @unit do |f|
  - if @unit.errors.any?
    #error_explanation
      %h2= "#{pluralize(@unit.errors.count, "error")} prohibited this unit from being saved:"
      %ul
        - @unit.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :item
    = f.text_field :item
  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :location
    = f.text_field :location
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :is_public
    = f.check_box :is_public
  .field
    = f.label :remarks
    = f.text_area :remarks
  .actions
    = f.submit 'Save'
