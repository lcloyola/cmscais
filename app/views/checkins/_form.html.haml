= form_for @checkin do |f|
  - if @checkin.errors.any?
    #error_explanation
      %h2= "#{pluralize(@checkin.errors.count, "error")} prohibited this checkin from being saved:"
      %ul
        - @checkin.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :location
    = collection_select :checkin, :location_id, Location.all, :id, :name
  .field
    = f.label :remarks
    = f.text_area :remarks
  .actions
    = f.submit 'Save'
